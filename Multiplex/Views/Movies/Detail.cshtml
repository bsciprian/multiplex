@model Multiplex.Models.Movies.MovieDetailModel
<div class="container">
    <div class="page-header page-header clearfix detailHeading">
        <h2 class="text-muted">View Run Item</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage" src="@Model.Poster" />
            </div>
        </div>
        <div class="col-md-4">
            <p id="itemTitle">@Model.Title</p>
            <p id="itemDuration">@Model.Duration</p>
            <p id="itemDescription">@Model.Description</p>
            <p id="itemType">@Model.Type</p>
        </div>
        <div class="col-md-4">
            @foreach (var run in @Model.Runs)
            {
            <a asp-controller="Runs" asp-action="Detail" asp-route-id="@run.Id"
               class="btn btn-primary">@run.DateTime</a>
            }
        </div>
    </div>
</div>